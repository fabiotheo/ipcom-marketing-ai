[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501,F401,E402,C901,F541

exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    .tox

per-file-ignores =
    __init__.py:F401
    tests/*:S101,S603,S607

max-complexity = 10
docstring-convention = google
